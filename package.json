{
  "name": "therapi",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@capacitor/android": "^1.2.1",
    "@capacitor/core": "^1.2.1",
    "@capacitor/ios": "^1.2.1",
    "@ionic/react": "^4.11.0",
    "@ionic/react-router": "^4.11.0",
    "@material-ui/core": "^4.4.2",
    "@material-ui/icons": "^4.4.3",
    "@material-ui/styles": "^4.4.1",
    "aws-amplify": "^1.1.40",
    "aws-amplify-react": "^2.4.4",
    "clsx": "^1.0.4",
    "cross-env": "^5.2.0",
    "formik": "^1.5.8",
    "ionicons": "^4.6.3",
    "moment": "^2.29.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-hooks-global-state": "^0.16.0",
    "react-router": "^5.1.0",
    "react-router-dom": "^5.1.0",
    "react-scripts": "3.1.1",
    "react-use": "^13.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:ci": "cross-env CI=true npm run test",
    "coverage": "cross-env CI=true npm run test -- --coverage",
    "precommit": "npm run test:ci && cross-env NODE_ENV=production lint-staged",
    "e2e:ci": "npm run start & wait-on http://localhost:3000 & cypress run",
    "e2e:open": "npm start & wait-on http://localhost:3000 & cypress open"
  },
  "lint-staged": {
    "src/**/*.js": [
      "pretty-quick --staged",
      "eslint src/ --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "functions": 80,
        "lines": 80,
        "branches": 80,
        "statements": -15
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/serviceWorker.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@capacitor/cli": "^1.2.1",
    "cypress": "^3.4.1",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1"
  }
}
